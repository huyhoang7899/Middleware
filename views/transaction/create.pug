extends ../../layouts/layout.pug

block content
  h1 Create Transaction

  form.d-flex(action="/transactions/create" method="POST")
    select.custom-select(name="userId")
      each user in users
        option(value=user.id)= user.name

    select.custom-select.mx-2(name="bookId")
      each book in books
        option(value=book.id)= book.title

    button.btn.btn-primary(type='submit') Create

