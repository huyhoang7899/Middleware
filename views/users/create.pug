extends ../../layouts/layout.pug

block content
  h1 Create User
    
  if(errors)
    each error in errors
      .alert.alert-danger= error
      
  form(action="/users/create" method="POST")
    .form-group
      label(for="inputName") Name
      input#inputName.form-control(type="text", name="name", value=values ? values.name : "")
    .form-group
      label(for="inputAge") Age
      input#inputAge.form-control(type="number", name="age", value=values ? values.age : "")
      label(for="inputAddress") Address
      input#inputAddress.form-control(type="text", name="address", value=values ? values.address : "")
      label(for="inputPhone") Phone
      input#inputPhone.form-control(type="number", name="phone", value=values ? values.phone : "")
    button.btn.btn-primary(type='submit') Create
