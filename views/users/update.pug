
extends ../../layouts/layout.pug

block content
  h1 Update
    
  form(action="/users/update" method="POST")
    .form-group
      label(for='inputName') Name
      input#inputName.form-control(type='text', name='name', value=user.name)
    .form-group
      label(for='inputAge') Age
      input#inputAge.form-control(type='number', name='age', value=user.age)
    .form-group
      label(for='inputAddress') Address
      input#inputAddress.form-control(type='text', name='address', value=user.address)
    .form-group
      label(for='inputPhone') Phone number
      input#inputPhone.form-control(type='number', name='phone', value=user.phone)
    .form-group
      input(name="id" type="hidden" value=user.id)
    button.btn.btn-primary(type='submit') Submit
